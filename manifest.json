{
  "manifest_version": 3,
  "name": "Smart Bookmark Organizer",
  "version": "1.0",
  "description": "A secure bookmark organizer that intelligently categorizes and encrypts your bookmarks",
  "author": "Rohit Karki",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}